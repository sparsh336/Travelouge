<% layout('layouts/boilerplate')  %> 
   <div class="row">
       <h1 class="text-center">New campground</h1>
       <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation" >
            <div class="mb-3">
             <label class="form-label" for="title"> Name</label>
             <input class="form-control" type="text" id="title" placeholder="name" name="campground[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label"for="location">Location</label>
                <input  class="form-control"type="text" id="location" placeholder="location" name="campground[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label"for="image">Image URL</label>
                <input  class="form-control"type="text" id="image" placeholder="image" name="campground[image]"required>
            </div>
            <div mb-3> 
                <label class="form-label"for="price">Price</label>
                <div class="input-gro<up ">
                    <span class="input-group-text">
                        <input type="text" name="campground[price]" id="price"required>
                        .00</span>
                  </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label"for="description">Description URL</label>
                <textarea  class="form-control" id="description" placeholder="description" name="campground[description]"ols="10" rows="2" required></textarea>  
            </div>
            <div class="mb-3">
                <button class="btn btn-success">click to submit</button>
            </div>
     
         
    
    
        </form>
       </div>
   </div>
    
